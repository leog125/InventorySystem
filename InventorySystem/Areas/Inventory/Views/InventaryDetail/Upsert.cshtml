@using DataTransferObjets.Configuration;
@model DataTransferObjets.Dto.Out.InventaryDetailResponse
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Inventary Details";
}

<form method="post" enctype="multipart/form-data">

    @if (Model.Id != 0)
    {
        title = "Update Inventary Details";
        <input asp-for="Id" hidden />
    }

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 class="text-info">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Inventary</label>
                            <select asp-for="InventaryId" asp-items="@Model.InventaryDropDownList" class="form-select">
                                <option disabled selected>-- Select a Inventary --</option>
                            </select>
                            <span asp-validation-for="InventaryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Product</label>
                            <select asp-for="ProductId" asp-items="@Model.ProductDropDownList" class="form-select">
                                <option disabled selected>-- Select a Product --</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>StockPrevious</label>
                            <input asp-for="StockPrevious" class="form-control" placeholder="StockPrevious" id="StockPrevious" />
                            <span asp-validation-for="StockPrevious" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Amount</label>
                            <input asp-for="Amount" class="form-control" placeholder="Amount" id="Amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>

                    <br />

                    <div class="d-grid gap-2 d-md-block">
                        @if (Model.Id != 0)
                        {
                            <partial name="_UpdateAndReturnButton" model="Model.Id" />
                        }
                        else
                        {
                            <partial name="_CreateAndReturnButton" />
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}